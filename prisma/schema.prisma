// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl is optional - only needed for migrations/seeds when using pooled connection
  // If not set, Prisma will use the regular DATABASE_URL
}

enum UserRole {
  CUSTOMER
  STAFF
  ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum PointStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  phone         String?
  password      String? // Optional: only for email/password users, null for OAuth users
  image         String? // Profile image URL (from OAuth providers like Google)
  emailVerified DateTime? // Email verification status (from OAuth providers)
  authMethod    String? // "email" | "google" | "email+google" (tracks how user authenticates)
  lastLoginAt   DateTime? // Track last login time
  role          UserRole  @default(CUSTOMER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  bookings     Booking[]
  points       Point[]
  staffActions StaffAction[]
  sessions     Session[]
  accounts     Account[] // OAuth account links (Google, etc.)

  @@index([email]) // Index for faster email lookups
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  code      String // 6-digit code
  expires   DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("password_reset_tokens")
}

model Game {
  id          String   @id @default(cuid())
  name        String
  description String?
  duration    Int // Duration in minutes
  price       Decimal  @db.Decimal(10, 2)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  bookings Booking[]

  @@map("games")
}

model Booking {
  id            String        @id @default(cuid())
  userId        String
  gameId        String
  startTime     DateTime
  endTime       DateTime
  duration      Int // Duration in minutes
  players       Int           @default(1)
  totalPrice    Decimal       @db.Decimal(10, 2)
  status        BookingStatus @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)
  paymentId     String?
  notes         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id])
  game Game @relation(fields: [gameId], references: [id])

  @@map("bookings")
}

model Point {
  id         String      @id @default(cuid())
  userId     String
  amount     Int
  reason     String
  status     PointStatus @default(PENDING)
  approvedBy String?
  approvedAt DateTime?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@map("points")
}

model StaffAction {
  id          String   @id @default(cuid())
  staffId     String
  action      String
  description String?
  metadata    Json?
  createdAt   DateTime @default(now())

  // Relations
  staff User @relation(fields: [staffId], references: [id])

  @@map("staff_actions")
}

model EmailTemplate {
  id        String   @id @default(cuid())
  name      String   @unique
  subject   String
  body      String   @db.Text
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("email_templates")
}

model EmailLog {
  id        String    @id @default(cuid())
  to        String
  subject   String
  body      String    @db.Text
  status    String    @default("PENDING")
  sentAt    DateTime?
  error     String?
  createdAt DateTime  @default(now())

  @@map("email_logs")
}

model SystemSettings {
  id    String @id @default(cuid())
  key   String @unique
  value String
  type  String @default("string") // string, number, boolean, json

  @@map("system_settings")
}
