// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  STAFF
  ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum PointStatus {
  PENDING
  APPROVED
  REJECTED
}

enum MembershipStatus {
  ACTIVE
  EXPIRED
  COMPLETED
  CANCELLED
}

enum MembershipPlanType {
  RC_TRACK
  PS5_GAMER_DUO
}

enum TimerStatus {
  RUNNING
  PAUSED
  COMPLETED
  STOPPED
}

enum TrackType {
  FAST_TRACK
  SAND_TRACK
  MUD_TRACK
  CRAWLER_TRACK
  PS5_GAMING
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  phone         String?
  password      String? // Optional: only for email/password users, null for OAuth users
  image         String? // Profile image URL (from OAuth providers like Google)
  emailVerified DateTime? // Email verification status (from OAuth providers)
  authMethod    String? // "email" | "google" | "email+google" (tracks how user authenticates)
  lastLoginAt   DateTime? // Track last login time
  role          UserRole  @default(CUSTOMER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  bookings     Booking[]
  points       Point[]
  staffActions StaffAction[]
  sessions     Session[]
  accounts     Account[] // OAuth account links (Google, etc.)
  memberships  Membership[]

  @@index([email]) // Index for faster email lookups
  @@index([role]) // Index for role-based queries (CUSTOMER, STAFF, ADMIN)
  @@index([createdAt]) // Index for date-based queries and sorting
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId]) // Index for foreign key lookups
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId]) // Index for foreign key lookups
  @@index([expires]) // Index for session expiration queries
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  code      String // 6-digit code
  expires   DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email]) // Index for email lookups
  @@index([expires]) // Index for expiration queries
  @@index([used]) // Index for filtering used tokens
  @@map("password_reset_tokens")
}

model Game {
  id          String   @id @default(cuid())
  name        String
  description String?
  duration    Int // Duration in minutes
  price       Decimal  @db.Decimal(10, 2)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  bookings Booking[]

  @@index([isActive]) // Index for filtering active games
  @@index([createdAt]) // Index for date-based queries and sorting
  @@map("games")
}

model Booking {
  id                  String        @id @default(cuid())
  userId              String
  gameId              String
  startTime           DateTime
  endTime             DateTime
  duration            Int // Duration in minutes
  players             Int           @default(1)
  totalPrice          Decimal       @db.Decimal(10, 2)
  status              BookingStatus @default(PENDING)
  paymentStatus       PaymentStatus @default(PENDING)
  paymentId           String?
  notes               String?
  membershipSessionId String?       @unique // Link to membership session if used (one-to-one)
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  // Relations
  user              User               @relation(fields: [userId], references: [id])
  game              Game               @relation(fields: [gameId], references: [id])
  membershipSession MembershipSession? @relation(fields: [membershipSessionId], references: [id])

  @@index([userId]) // Index for user booking queries
  @@index([gameId]) // Index for game-based queries and groupBy
  @@index([status]) // Index for status filtering (PENDING, CONFIRMED, etc.)
  @@index([paymentStatus]) // Index for payment status filtering
  @@index([startTime]) // Index for startTime sorting and filtering
  @@index([createdAt]) // Index for date-based queries and sorting
  @@index([status, paymentStatus, createdAt]) // Composite index for report queries
  @@map("bookings")
}

model Point {
  id         String      @id @default(cuid())
  userId     String
  amount     Int
  reason     String
  status     PointStatus @default(PENDING)
  approvedBy String?
  approvedAt DateTime?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@index([userId]) // Index for user point queries
  @@index([status]) // Index for status filtering (PENDING, APPROVED, REJECTED)
  @@index([createdAt]) // Index for date-based queries and sorting
  @@map("points")
}

model StaffAction {
  id          String   @id @default(cuid())
  staffId     String
  action      String
  description String?
  metadata    Json?
  createdAt   DateTime @default(now())

  // Relations
  staff User @relation(fields: [staffId], references: [id])

  @@index([staffId]) // Index for staff action queries
  @@index([createdAt]) // Index for date-based queries and sorting
  @@map("staff_actions")
}

model EmailTemplate {
  id        String   @id @default(cuid())
  name      String   @unique
  subject   String
  body      String   @db.Text
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("email_templates")
}

model EmailLog {
  id        String    @id @default(cuid())
  to        String
  subject   String
  body      String    @db.Text
  status    String    @default("PENDING")
  sentAt    DateTime?
  error     String?
  createdAt DateTime  @default(now())

  @@index([status]) // Index for status filtering
  @@index([createdAt]) // Index for date-based queries and sorting
  @@map("email_logs")
}

model SystemSettings {
  id    String @id @default(cuid())
  key   String @unique
  value String
  type  String @default("string") // string, number, boolean, json

  @@map("system_settings")
}

model Membership {
  id                String             @id @default(cuid())
  userId            String
  planType          MembershipPlanType
  startDate         DateTime
  expiryDate        DateTime
  status            MembershipStatus   @default(ACTIVE)
  sessionsTotal     Int                @default(16)
  sessionsUsed      Int                @default(0)
  sessionsRemaining Int                @default(16)
  lastBookedDate    DateTime?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  // Relations
  user         User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessions     MembershipSession[]
  transactions MembershipTransaction[]

  @@index([userId])
  @@index([status])
  @@index([expiryDate])
  @@map("memberships")
}

model MembershipSession {
  id           String   @id @default(cuid())
  membershipId String
  bookingId    String?  @unique
  usedAt       DateTime
  usedBy       String? // Admin/Staff ID who marked it used
  usedByName   String? // Admin/Staff name for display
  notes        String?
  createdAt    DateTime @default(now())

  // Relations
  membership Membership @relation(fields: [membershipId], references: [id], onDelete: Cascade)
  booking    Booking?

  @@index([membershipId])
  @@index([usedAt])
  @@map("membership_sessions")
}

model MembershipTransaction {
  id              String        @id @default(cuid())
  membershipId    String
  amount          Decimal       @db.Decimal(10, 2)
  paymentMethod   String? // "razorpay", "stripe", "cash", etc.
  paymentId       String? // External payment ID
  status          PaymentStatus @default(PENDING)
  transactionDate DateTime      @default(now())
  notes           String?
  createdAt       DateTime      @default(now())

  // Relations
  membership Membership @relation(fields: [membershipId], references: [id], onDelete: Cascade)

  @@index([membershipId])
  @@index([transactionDate])
  @@map("membership_transactions")
}

model Track {
  id        String    @id @default(cuid())
  name      String    @unique
  type      TrackType
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  timers Timer[]

  @@index([isActive]) // Index for filtering active tracks
  @@index([type]) // Index for track type filtering
  @@map("tracks")
}

model Timer {
  id                 String      @id @default(cuid())
  customerName       String
  trackId            String? // null for combo/global timers
  allocatedMinutes   Int // Total minutes allocated
  remainingSeconds   Int // Remaining seconds (updated in real-time)
  startTime          DateTime? // When timer was started
  pausedAt           DateTime? // When timer was paused
  totalPausedSeconds Int         @default(0) // Total seconds paused
  status             TimerStatus @default(STOPPED)
  isCombo            Boolean     @default(false) // true for global/combo timers
  createdBy          String? // Admin/Staff ID who created it
  createdByName      String? // Admin/Staff name
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt

  // Relations
  track Track? @relation(fields: [trackId], references: [id], onDelete: SetNull)

  @@index([trackId]) // Index for track-based queries
  @@index([status]) // Index for status filtering (RUNNING, PAUSED, etc.)
  @@index([isCombo]) // Index for combo timer filtering
  @@index([createdAt]) // Index for date-based queries and sorting
  @@index([isCombo, createdAt]) // Composite index for common orderBy pattern
  @@index([status, trackId]) // Composite index for status + trackId filtering
  @@index([startTime]) // Index for startTime queries (used in calculations)
  @@map("timers")
}
